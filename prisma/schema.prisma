generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL") // Uses Port 6543 (Fast for App)
  directUrl = env("DIRECT_URL")   // ✅ Uses Port 5432 (Required for db push)
}

model Admin {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
}

model Project {
  id              String   @id @default(uuid())
  title           String
  slug            String   @unique
  
  // Locations
  city            String?  // e.g. "Gurugram", "Noida"
  location        String?  // e.g. "Sector 150"
  
  // Specs
  status          String?  @default("New Launch")
  propertyType    String?  // "Residential", "Commercial"
  configurations  String[] @default([]) // ✅ NEW: ["2 BHK", "3 BHK", "Penthouse"]
  
  // Details
  price           String?
  area            String?
  totalUnits      String?
  launchDate      String?
  rera            String?
  builder         String?
  
  // Descriptions
  overview        String?
  videoUrl        String?
  googleMapUrl    String?
  
  // Arrays
  amenities       String[] @default([])
  connectivity    String[] @default([])
  nearbyAmenities String[] @default([])

  // Media
  coverImage      String?
  brochure        String?
  
  // Relations
  projectAmenities Amenity[]
  floorplans      FloorPlan[]
  gallery         GalleryImage[]

  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}

model GalleryImage {
  id        String   @id @default(uuid())
  url       String
  alt       String?
  projectId String
  createdAt DateTime @default(now())
  project   Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)
}

model Amenity {
  id        String  @id @default(uuid())
  name      String
  icon      String
  projectId String
  project   Project @relation(fields: [projectId], references: [id], onDelete: Cascade)
}

model FloorPlan {
  id        String   @id @default(uuid())
  url       String
  alt       String?
  projectId String
  createdAt DateTime @default(now())
  type      String   @default("unit")
  project   Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)
}

model Lead {
  id        String   @id @default(uuid())
  name      String
  email     String
  phone     String
  message   String?
  source    String?  @default("Website")
  createdAt DateTime @default(now())
}
