generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Admin {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
}

model Project {
  id              String   @id @default(uuid())
  title           String
  slug            String   @unique
  
  // Locations
  city            String?  // e.g. "Gurugram"
  location        String?  // e.g. "Sector 150"
  
  // Specs & Status
  status          String?  @default("New Launch") // Values: "Ready to Move", "Under Construction", "New Launch"
  propertyType    String?  // Values: "Residential", "Commercial", "SCO Plots"
  configurations  String[] @default([]) // e.g. ["2 BHK", "3 BHK", "Penthouse"]
  
  // ✅ NEW DETAILS ADDED
  landArea        String?  // e.g. "12 Acres"
  paymentPlan     String?  // e.g. "30:40:30"
  isFeatured      Boolean  @default(false) // To pin to top of homepage
  
  // Financials
  price           String?
  area            String?  // e.g. "1200 - 4500 Sq. Ft."
  totalUnits      String?
  launchDate      String?
  rera            String?
  builder         String?
  
  // Descriptions & Media
  overview        String?
  videoUrl        String?
  googleMapUrl    String?
  coverImage      String?
  brochure        String?
  
  // --- AMENITIES SPLIT ---
  // 1. General Amenities: Simple text list (e.g. "Power Backup", "Lift", "Security")
  amenities       String[] @default([]) 
  
  // 2. Connectivity & Landmarks (Simple text lists)
  connectivity    String[] @default([])
   schools         String[] @default([]) // ✅ NEW: Schools/Colleges
  hospitals       String[] @default([]) // ✅ NEW: Hospitals/Clinics
  nearbyAmenities String[] @default([])

  // Relations
  // 3. Project Specific Amenities: Rich visuals with Icons (e.g. "Clubhouse", "Golf Course")
  projectAmenities Amenity[]
  
  floorplans      FloorPlan[]
  gallery         GalleryImage[]

  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}

// Rich Amenities (Icon + Name)
model Amenity {
  id        String  @id @default(uuid())
  name      String
  icon      String  // URL to icon image
  projectId String
  project   Project @relation(fields: [projectId], references: [id], onDelete: Cascade)
}

// Project Photos
model GalleryImage {
  id        String   @id @default(uuid())
  url       String
  alt       String?
  projectId String
  createdAt DateTime @default(now())
  project   Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)
}

// Floor Plans
model FloorPlan {
  id        String   @id @default(uuid())
  url       String
  alt       String?
  projectId String
  createdAt DateTime @default(now())
  type      String   @default("unit")
  project   Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)
}

// Lead Forms
model Lead {
  id           String   @id @default(cuid())
  name         String
  email        String?
  phone        String
  propertyType String?  // Residential, Commercial, etc.
  message      String?
  status       String   @default("New") // New, Contacted, Closed
  createdAt    DateTime @default(now())
}